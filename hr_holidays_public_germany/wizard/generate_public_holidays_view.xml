<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_generate_public_holiday">
            <field name="name">view.generate.public.holidays</field>
            <field name="model">generate.public.holidays</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Reset Public Holidays">
                    <group col="2" colspan="2">
                        <field name="year" />
                        <field name="country_id" options="{'no_create': True}"/>
                        <field name="state_id" options="{'no_create': True}"/>
                        <field name="template_id" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <button name="action_run" string="Generate" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_wizard_generate_public_holidays">
            <field name="name">Reset Public Holidays</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">generate.public.holidays</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_wizard_generate_public_holidays"
                  name="Reset Public Holiday"
                  parent="hr_holidays_public.menu_hr_public_holidays"
                  action="action_wizard_generate_public_holidays"/>
    </data>
</openerp>
